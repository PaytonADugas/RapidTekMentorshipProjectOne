<!--This is the layout used for all ejs files within the "views" directory-->
<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width; initial-scale=1; maximum-scale=1; user-scalable=0;">
    <meta name="description" content="The RTS Aggregate Solution">
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" href="../css/foundation.css" type="text/css">
    <link rel="stylesheet" href="../css/base.css" type="text/css">
    <link rel="stylesheet" href="../css/main.css" type="text/css">
    <script src="https://josiahswanson.com/js/hej.js"></script>
    <title>RTS Aggregate Solution</title>
</head>

<body onload="showGreeting()">
    <header>
        <h1>Aggregate Solution</h1>
    </header>
    
    <% if (!user) { %> 
        <p class="centeredp">
            <a href="/">Home</a>
            <a href="/login">Log In</a>
        </p>
    <% } else { %>
        <nav>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/account">Account</a></li>
              <li><a href="/weather">Weather</a></li>
              <li><a href="/surf">Surf</a></li>
              <li><a href="/astronomy">Astronomy</a></li>
              <li><a href="/logout">Log Out</a></li>
            </ul>
        </nav>
    <% } %>
    <!--this body tag is where the contents of the ejs code from the views files will end up-->
    <main><%- body %></main>
</body>

</html>